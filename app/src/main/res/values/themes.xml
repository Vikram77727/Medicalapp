<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme for MedicalApp -->
    <style name="Theme.Medical" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- Transparent System Bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Typography (optional override) -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Medicalapp.XL</item>

        <!-- Button Style -->
        <item name="materialButtonStyle">@style/Widget.Medicalapp.Button</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.Medicalapp.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- XL Text Style -->
    <style name="TextAppearance.Medicalapp.XL" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
